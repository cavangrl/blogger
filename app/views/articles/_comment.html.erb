<div>
  <h4>Comment by <%= comment.user_id %></h4>
  <p class="comment"><%= comment.body %></p>
</div>	

<% if current_user %>
<%= render partial: 'form' %>
<% else %>
<p>You must be signed in to create a comment!</p>
<p><%= link_to "Sign in", "/login" %> | <%= link_to "Sign up", new_user_path %> </p>
<% end %>