<!DOCTYPE html>
<html>
<head>
  <title>Blogger</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div id="container">
	<header style="height: 60px;">
	<% if current_user %>
		<p>Hello <%= current_user.username %> (<%=link_to "Logout", logout_path, method: :delete %>) </p>
	<% else %>
		<p><%= link_to "Sign in", "/login" %> | <%= link_to "Sign up", new_user_path %> </p>
	<% end %>
	<%= flash[:notice] if flash[:notice] %>
	<%= flash[:alert] if flash[:alert] %>
	</header>


<%= yield %>

</div>
</body>
</html>
